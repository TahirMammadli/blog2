<%- include('./includes/nav.ejs') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">



 <% if(posts.length > 0){ %>
  <% for(let post of posts) { %>
      <ul>
        
          <li><a href="/get-single-post/<%= post._id %>"><%= post.title %></a></li>
          <li><%= post.content %></li>
        <button><a href="/get-edit-post/<%= post._id %>">Edit</a></button>
        <button><a href="/delete-post/<%= post._id %>">Delete</a></button>
      </ul>
      <% } %>
      <% }else{ %>
          <h1>No products found</h1>
      <% } %>


    
</body>
</html>