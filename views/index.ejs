</head>
<body>
<%- include('./includes/nav.ejs') %>





<% if(books.length > 0){ %>
  <% for(let book of books) { %>
<div class="row">
    <div class="col s8 m3">
      <div class="card" >
        <div class="card-image">
          <img src="/book.jpg" width="20" height="200">
        </div>
        <div class="card-content">
          <p><a href="/books/<%= book._id %>"></a><%= book.title %></p>
        </div>
        <div class="card-content">
          <p><%= book.content %></p>
        </div>
        <div class="card-content">
          <p>Posted by: <b><%= user.first_name %> <%= user.last_name %></b></p>
        </div>
        <div class="card-action">
          <a href="#">Rent</a>
          <a href="#">Add To Library</a>
        </div>
      </div> 
    </div>
</div>
<% } %>
<% }else{ %>
            <!-- <h1>No products found</h1> -->
<% } %>


 


    
</body>
</html>